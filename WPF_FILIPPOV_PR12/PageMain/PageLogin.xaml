<Page x:Class="WPF_FILIPPOV_PR12.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_FILIPPOV_PR12.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин"/>
            <TextBox Text="" x:Name="txbLogin"/>
            <Label Content="Введите пароль"/>
            <PasswordBox x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            </StackPanel>
            <Button Content="Регистрация" x:Name="btnRegIn" Click="btnRegIn_Click"/>
            <Button x:Name="btnIn" Content="Войти" Click="btnIn_Click"/>
        </StackPanel>
    </Grid>
</Page>
